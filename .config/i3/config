# set modifier
set $super Mod1

# set workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# set colors
set $nord0 #2e3440       
set $nord1 #3b4252       
set $nord4 #d8dee9      
set $nord5 #e5e9f0       
set $nord7 #8fbcbb       
set $nord13 #ebcb8b      
set $nord9 #81a1c1       

# set monitor variables
set $LAPTOP eDP
set $EXTERNAL DisplayPort-1

# set font
font pango:Material-Icons 11, Poppins Regular 11

# Use mouse+$super to drag floating windows to their wanted position
floating_modifier $super

# autostart
exec --no-startup-id nm-applet &
exec --no-startup-id xfsettingsd &
exec --no-startup-id spotify &
exec --no-startup-id brave-browser &
exec --no-startup-id systemd-run --on-calendar="*:0/30" --user -- /usr/bin/feh --no-fehbg --bg-scale --randomize -r ~/.config/wallpapers


# screen setup
workspace $ws1 output $EXTERNAL $LAPTOP
workspace $ws2 output $EXTERNAL $LAPTOP
workspace $ws3 output $EXTERNAL $LAPTOP
workspace $ws4 output $EXTERNAL $LAPTOP
workspace $ws5 output $EXTERNAL $LAPTOP
workspace $ws6 output $EXTERNAL $LAPTOP
workspace $ws7 output $EXTERNAL $LAPTOP
workspace $ws8 output $EXTERNAL $LAPTOP
workspace $ws9 output $EXTERNAL $LAPTOP
workspace $ws10 output $EXTERNAL $LAPTOP

# start dmenu (a program launcher)
bindsym $super+d exec rofi -show drun

# common apps keybinds
bindsym $super+Return exec wezterm-gui
bindsym $super+l exec i3lock -i ~/.lock.png
bindsym $super+u exec --no-startup-id brave-browser

# change volume and brightness
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# kill focused window
bindsym $super+Shift+q kill

# change focus
bindsym $super+Left focus left
bindsym $super+Down focus down
bindsym $super+Up focus up
bindsym $super+Right focus right

# move focused window
bindsym $super+Shift+Left move left
bindsym $super+Shift+Down move down
bindsym $super+Shift+Up move up
bindsym $super+Shift+Right move right

# split in horizontal or vertical orientation
bindsym $super+h split h
bindsym $super+v split v

# change split direction for already opened windows
bindsym $super+s layout toggle split

# enter fullscreen mode for the focused container
bindsym $super+f fullscreen toggle

# toggle tiling / floating
bindsym $super+space floating toggle

# change focus between tiling / floating windows
bindsym $super+Shift+space focus mode_toggle

# Navigate between workspaces
bindsym $super+Control+Right workspace next
bindsym $super+Control+Left workspace prev

# Switch to workspace
bindsym $super+1 workspace $ws1
bindsym $super+2 workspace $ws2
bindsym $super+3 workspace $ws3
bindsym $super+4 workspace $ws4
bindsym $super+5 workspace $ws5
bindsym $super+6 workspace $ws6
bindsym $super+7 workspace $ws7
bindsym $super+8 workspace $ws8
bindsym $super+9 workspace $ws9
bindsym $super+0 workspace $ws10

# Move focused container to workspace
bindsym $super+Shift+1 move container to workspace $ws1
bindsym $super+Shift+2 move container to workspace $ws2
bindsym $super+Shift+3 move container to workspace $ws3
bindsym $super+Shift+6 move container to workspace $ws6
bindsym $super+Shift+7 move container to workspace $ws7
bindsym $super+Shift+8 move container to workspace $ws8
bindsym $super+Shift+9 move container to workspace $ws9
bindsym $super+Shift+0 move container to workspace $ws10

# Application assignments
assign [class="Brave-browser"] $ws3
assign [class="Spotify"] $ws10

# exit i3
bindsym $super+Shift+e exec "i3-nagbar -t warning -m 'Really, exit?' \
-b 'Yes' 'i3-msg exit'"

# reload config
bindsym $super+Shift+c reload

# resize window (you can also use the mouse for that)
mode "resize" {
	bindsym Left resize shrink width 5 px or 5 ppt
	bindsym Down resize grow height 5 px or 5 ppt
	bindsym Up resize shrink height 5 px or 5 ppt
	bindsym Right resize grow width 5 px or 5 ppt
	bindsym Return mode "default"
	}
bindsym $super+r mode "resize"

# panel
bar {
	status_command i3status
	position bottom
	workspace_min_width 24
	padding 0px 2px 0px 2px
	strip_workspace_numbers yes

	colors {
                background $nord0
                statusline $nord4
                separator  $nord0
                        # colour of border, backgr, text
                focused_workspace   $nord0  $nord7  $nord0
                active_workspace    $nord0  $nord0  $nord4
                inactive_workspace  $nord0  $nord0  $nord4
                urgent_workspace    $nord0  $nord13 $nord0 
		}
}

# Client window colors (border, backgr, text,  indicator, child_border)
client.focused          $nord7  $nord1  $nord4 $nord9     $nord7
client.focused_inactive $nord1  $nord1  $nord4 $nord1     $nord1
client.unfocused        $nord1  $nord1  $nord4 $nord1     $nord1
client.placeholder      $nord1  $nord1  $nord4 $nord1     $nord1
client.urgent           $nord1  $nord13 $nord0 $nord1     $nord1

# window rules, you can find the window class using xprop
for_window [class=gwenview|Eog|Sxiv|feh|spectacle|mpv|vlc|ark|File-roller|Xarchiver] floating enable
for_window [class=gwenview|Eog|Sxiv|feh|spectacle|mpv|vlc|ark|File-roller|Xarchiver] focus
for_window [class=".*"] border pixel 4
hide_edge_borders smart
gaps inner 4
smart_gaps on

